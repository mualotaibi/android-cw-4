<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C1A6A6"
    android:orientation="vertical"
    tools:context="MainActivity">

    <TextView
        android:id="@+id/TextView"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_marginStart="60dp"
        android:fontFamily="sans-serif-thin"
        android:text="Grade calculator"
        android:textColorHighlight="#000000"
        android:textSize="36sp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="210dp"
        android:layout_height="80dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="430dp"
        android:text="calcuate" />

    <EditText
        android:id="@+id/height"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="70dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="7dp"
        android:drawableRight="?attr/actionModeCloseDrawable"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Quizes %15"
        android:inputType="textPersonName"
        android:textColor="#613131"
        android:textColorHighlight="#888080"
        android:textColorHint="#592224"
        android:textColorLink="#FFFFFF" />


    <EditText
        android:id="@+id/weight"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="150dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="7dp"
        android:drawableRight="?attr/actionModeCloseDrawable"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Howemork %25"
        android:inputType="textPersonName"
        android:scrollbarTrackHorizontal="@color/colorPrimaryDark"
        android:scrollbarTrackVertical="@android:drawable/ic_menu_search"
        android:textColor="#613131"
        android:textColorHighlight="#732929"
        android:textColorHint="#611F1F"
        android:textColorLink="#FFFFFF" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="230dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="7dp"
        android:drawableRight="?attr/actionModeCloseDrawable"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Mid trems 30%"
        android:inputType="textPersonName"
        android:scrollbarTrackHorizontal="@color/colorPrimaryDark"
        android:scrollbarTrackVertical="@android:drawable/ic_menu_search"
        android:textColor="#4D2425"
        android:textColorHighlight="#FFFFFF"
        android:textColorHint="#541D1F" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="210dp"
        android:layout_height="40dp"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="310dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="7dp"
        android:drawableRight="?attr/actionModeCloseDrawable"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="finl 30%"
        android:inputType="textPersonName"
        android:scrollbarTrackHorizontal="@color/colorPrimaryDark"
        android:scrollbarTrackVertical="@android:drawable/ic_menu_search"
        android:textColor="#DF2A31"
        android:textColorHighlight="#592123"
        android:textColorHint="#592123"
        android:textColorLink="#4D2023" />
</RelativeLayout>